#include <stdio.h>
#include <math.h>

int main() {
    int n;
    
    printf("Enter the number of elements: ");
    if (scanf("%d", &n) != 1 || n <= 0) return 1;

    double data[n], sum = 0, mean, variance = 0, std_dev;

    printf("Enter %d numbers:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%lf", &data[i]);
        sum += data[i];
    }
    mean = sum / n;

    for (int i = 0; i < n; i++) {
        variance += pow(data[i] - mean, 2);
    }
    variance /= n; // Use (n - 1) here for Sample Variance
    std_dev = sqrt(variance);
    printf("\n--- Results ---\n");
    printf("Mean:      %.4f\n", mean);
    printf("Variance:  %.4f\n", variance);
    printf("Std Dev:   %.4f\n", std_dev);

    return 0;
}
